# Project Metadata
PROJECT_NAME=Single Process FastAPI
VERSION=0.1.0

# API Configuration
API_V1_PREFIX=/api/v1

# Application Environment
APP_ENVIRONMENT=local

# Database connection (app uses this)
APPLICATION_DATABASE_URL=postgresql+asyncpg://dev:dev@postgres:5432/single_process_dev
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_RECYCLE=3600
DB_POOL_PRE_PING=False
DB_ECHO_SQL=False

# Postgres config (postgres container uses these)
POSTGRES_DB=single_process_dev
POSTGRES_USER=dev
POSTGRES_PASSWORD=dev
